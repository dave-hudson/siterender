{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "./src/**/*.test.ts"
  ]
}

